{% extends 'base.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block body %}
    <h1>Terrain</h1>
<div class="card-body">
                
                <h5 class="card-title" style="margin-left:300px;">Afficher Terrain</h5>
                <div class=" align-items-center justify-content-start" style="margin-left:300px"> 
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ terrain.id }}</td>
            </tr>
            <tr>
                <th>Nom_t</th>
                <td>{{ terrain.nomT }}</td>
            </tr>
            <tr>
                <th>Nb_places</th>
                <td>{{ terrain.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ terrain.surface }}</td>
            </tr>
            <tr>
                <th>Type_r</th>
                <td>{{ terrain.typeR }}</td>
            </tr>
            <tr>
                <th>Type_c</th>
                <td>{{ terrain.typeC }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ terrain.prix }}</td>
            </tr>
            <tr>
                <th>Img</th>
               <td><img src="{{ asset('uploads/' ~ terrain.img) }}" alt="{{ terrain.img }}" width="100" height="100"</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_terrain_index') }}"class="btn btn-primary">back to list</a>

    <a href="{{ path('app_terrain_edit', {'id': terrain.id}) }}"class="btn btn-primary">edit</a>

    {{ include('terrain/_delete_form.html.twig') }}
{% endblock %}

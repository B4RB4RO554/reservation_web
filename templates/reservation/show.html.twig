{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>
       <div class="card">
                <div class="card-body">
                
                <h5 class="card-title" style="margin-left:300px;">Show Reservation</h5>
                <div class=" align-items-center justify-content-start" style="margin-left:300px"> 

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ reservation.type }}</td>
            </tr>
            <tr>
                <th>Date_r</th>
                <td>{{ reservation.dateR ? reservation.dateR|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_r</th>
                <td>{{ reservation.heureR }}</td>
            </tr>
            <tr>
                <th>Reserved_places</th>
                <td>{{ reservation.reservedPlaces }}</td>
            </tr>
            <tr>
                <th>Renseignements</th>
                <td>{{ reservation.Renseignements }}</td>
            </tr>
            <tr>
                <th>User_email</th>
                <td>{{ reservation.userEmail }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}"class="btn btn-warning">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning">edit</a>

    {{ include('reservation/_delete_form.html.twig')  }}
{% endblock %}
